//Sum of first N Natural Numbers
import java.util.*;
class SumofNumber {
 public static void main(String[] args) {
     Scanner sc=new Scanner(System.in);
     System.out.println("Enter a number:");
     int n=sc.nextInt();
     //Sum of first N Natural Numbers
     int sum=0;
     for(int i=1;i<=n;i++){
         sum+=i;
     }
     System.out.println("Sum of first N Natural Numbers : "+sum);
    }
}
